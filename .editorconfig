# http://EditorConfig.org

root = true

[*]
charset = utf-8
insert_final_newline = true
indent_size = 4
indent_style = space
max_line_length = 80
trim_trailing_whitespace = true

[*.php]
max_line_length = 120

[*.{css,js,json,ts,twig,yaml}]
indent_size = 2

[Makefile]
indent_style = tab
tab_width = 4
